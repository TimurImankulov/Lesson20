<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRvTemp"
        style="@style/textViewThirdly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/degreeformat"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <TextView
        android:id="@+id/tvRvMaxTemp"
        style="@style/textViewThirdly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/degreeformat"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tvRvTemp"
        app:layout_constraintStart_toStartOf="@id/tvRvTemp"
        app:layout_constraintTop_toBottomOf="@id/tvRvTemp" />

    <TextView
        android:id="@+id/tvRvMinTemp"
        style="@style/textViewThirdly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:text="@string/degreeformat"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/tvRvMaxTemp"
        app:layout_constraintStart_toStartOf="@id/tvRvMaxTemp"
        app:layout_constraintTop_toBottomOf="@id/tvRvMaxTemp" />

</androidx.constraintlayout.widget.ConstraintLayout>